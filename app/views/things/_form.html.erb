<p><%= label_tag I18n.t(:name) %>
<%= text_field :thing, :name %></p>

<p><%= label_tag I18n.t(:description) %>
<%= text_area :thing, :description, :rows=>4 %></p>

<p><%= label_tag I18n.t(:swap_reason) %>
<%= text_area :thing, :swap_reason, :rows=>4 %></p>

<p><%= label_tag I18n.t(:buying_price) %>
<%= text_field :thing, :buying_price, :size=>5 %></p>

<p><%= label_tag I18n.t(:buying_date) %>
<%= text_field :thing, :buying_date, :size=>8 %></p>

<p><%= label_tag I18n.t(:estimated_price) %>
<%= text_field :thing, :estimated_price, :size=>5 %>
<%= I18n.t(:estimated_price_explaination) %>
</p>

<p><%= label_tag :photo %>
<%= file_field :thing, :photo %></p>

<% if thing and thing.photo_file_name %>
<label>&nbsp;</label>
<%= image_tag thing.photo.url(:small), :class=>"thing_img" %>  
<% end %>

